{
    "info": {
        "_postman_id": "user-management-collection",
        "name": "User Management API",
        "description": "Dedicated collection for User Management (Super Admin).",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Admin: Create User",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"name\": \"New Admission Exec\",\n    \"email\": \"exec@example.com\",\n    \"password\": \"password123\",\n    \"role\": \"Admission Executive\",\n    \"phone\": \"9876543210\",\n    \"designation\": \"Junior Executive\",\n    \"agent_number\": \"1005\",\n    \"caller_id\": \"04412345678\",\n    \"status\": \"active\",\n    \"metadata\": {\n        \"department\": \"Admissions\"\n    }\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{base_url}}/api/v1/users",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "v1",
                        "users"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Admin: Update User",
            "request": {
                "method": "PUT",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"name\": \"Updated Name\",\n    \"role\": \"Admission Manager\",\n    \"status\": \"active\",\n    \"is_available\": true,\n    \"weightage\": 2,\n    \"active_leads_count\": 0,\n    \"agent_number\": \"1005\",\n    \"caller_id\": \"04412345678\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{base_url}}/api/v1/users/{{user_id}}",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "v1",
                        "users",
                        "{{user_id}}"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Admin: Delete User (Soft)",
            "request": {
                "method": "DELETE",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/api/v1/users/{{user_id}}?type=soft",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "v1",
                        "users",
                        "{{user_id}}"
                    ],
                    "query": [
                        {
                            "key": "type",
                            "value": "soft",
                            "description": "soft or hard"
                        }
                    ]
                }
            },
            "response": []
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3000",
            "type": "string"
        },
        {
            "key": "token",
            "value": "",
            "type": "string"
        },
        {
            "key": "user_id",
            "value": "TARGET_USER_UUID",
            "type": "string"
        }
    ]
}